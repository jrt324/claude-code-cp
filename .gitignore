# =======================================
# Java & Gradle project .gitignore
# =======================================

# -----------------------------
# Compiled class files
# -----------------------------
*.class

# -----------------------------
# Log files
# -----------------------------
*.log

# -----------------------------
# Package files
# -----------------------------
*.jar
*.war
*.nar
*.ear
*.zip
*.tar.gz
*.rar

# -----------------------------
# Gradle specific
# -----------------------------
.gradle/
build/

# Exclude Gradle wrapper JAR from ignore (keep it in repo)
!gradle-wrapper.jar
!gradlew
!gradlew.bat

# -----------------------------
# IntelliJ IDEA (JetBrains IDE)
# -----------------------------
.idea/                 # Project settings (can be regenerated)
*.iws                  # Workspace files
*.iml                  # Module files
*.ipr                  # Project files
out/                   # Default build output

# Recommended: keep code style & inspection profiles if shared by team
# .idea/codeStyles/
# .idea/inspectionProfiles/

# -----------------------------
# Eclipse (if someone uses it)
# -----------------------------
.project
.classpath
.settings/
bin/

# -----------------------------
# VS Code
# -----------------------------
.vscode/

# -----------------------------
# OS generated files
# -----------------------------
# macOS
.DS_Store

# Windows
Thumbs.db
ehthumbs.db
desktop.ini

# Linux
*~

# -----------------------------
# Temporary / cache files
# -----------------------------
*.swp
*.swo

# -----------------------------
# Reports & test outputs
# -----------------------------
reports/
test-results/

.idea/

gradle/
